<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" >

    <LinearLayout
        android:id="@+id/textDescription"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="6dp"
        android:visibility="visible" >

        <TextView
            android:id="@+id/tvTaskNum"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_marginRight="6dp"
            android:layout_weight="1"
            android:background="#d0d0d0"
            android:gravity="center"
            android:textSize="14sp" />

        <LinearLayout
            android:id="@+id/centerTextDescription"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginRight="6dp"
            android:layout_weight="5"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/tvTaskName"
                android:layout_width="fill_parent"
                android:layout_height="0dp"
                android:layout_marginBottom="6dp"
                android:layout_weight="2"
                android:singleLine="true"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/tvTopicName"
                android:layout_width="fill_parent"
                android:layout_height="0dp"
                android:layout_weight="2"
                android:singleLine="true"
                android:textSize="13sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/rightTextDescription"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/tvGroup"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/tvDate"
                    android:layout_width="0dip"
                    android:layout_height="wrap_content"
                    android:layout_weight="3"
                    android:gravity="right"
                    android:textSize="13sp" />
            </LinearLayout>

            <TextView
                android:id="@+id/tvMaxMarks"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="right"
                android:textSize="14sp" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/buttonDescription"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="horizontal"
        android:padding="6dp"
        android:visibility="invisible" >

        <TextView
            android:id="@+id/tvTaskEdit"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_marginRight="6dp"
            android:layout_weight="2"
            android:background="#d0d0d0"
            android:gravity="center"
            android:text="Edit"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/tvTaskScore"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_marginRight="6dp"
            android:layout_weight="2"
            android:background="#d0d0d0"
            android:gravity="center"
            android:text="Score"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/tvTaskView"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_marginRight="6dp"
            android:layout_weight="2"
            android:background="#d0d0d0"
            android:gravity="center"
            android:text="View"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/tvTaskBack"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_marginRight="6dp"
            android:layout_weight="1"
            android:background="#d0d0d0"
            android:gravity="center"
            android:text="Back"
            android:textSize="14sp" />
    </LinearLayout>

</RelativeLayout>